.top{
  width: 100%;
  padding-bottom: 25px;
  position: relative;
  height: auto;
}
.share_image{
  width: 100%;
  height: 150px;
}
.share_button{
  font-size: 25px;
  height: 45px;
  width: 45px;
  font-weight: bolder;
  border-radius: 50%;
  background: white;
  line-height: 40px;
  position: absolute;
  right: 10px;
  top: 10px;
}
.user{
  position: absolute;
  bottom: 20px;
  right: 10px;
  width: 50px;
  height: 50px;
  z-index: 1;
  border-radius: 10px;
}
.share_name{
  position: absolute;
  color: white;
  right: 70px;
  bottom: 40px;
  font-size: 14px;
}


.main {
	width: 100%;
	height: 100vh;
	background-color: #0E9489;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
}

.main .login {
	margin-top: 150rpx;
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: center;
	flex: 1;
} 

.main .login .kuang {
	width: 600rpx;
	background-color: #fff;
	height: 750rpx;
	margin-top: 0rpx;
	border-radius: 20rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	padding: 50rpx 20rpx;
}

.main .login .kuang button {
	width: 85%;
	background-color: #0E9489;
	color: #fff;
	font-size:32rpx;
}

.main .bottom {
	width: 100%;
	font-size: 26rpx;
	height: 70rpx;
	text-align: center;
	color: #fff;
	display: flex;
	flex-direction: column;
}
